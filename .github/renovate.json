{
    "extends": [
      "config:js-app",
      ":gitSignOff",
      ":rebaseStalePrs",
      "group:allNonMajor",
      "group:linters",
      "default:pinDigestsDisabled",
      "default:automergeBranchPush"
    ],
    "js": {
      "groupName": "{additionalBranchPrefix} ",
      "additionalBranchPrefix": "js "
    },
    "python": {
      "groupName": "{additionalBranchPrefix} ",       
      "additionalBranchPrefix": "python "
    },
    "labels": ["kind/dependency upgrade"],
    "npm": {
      "minimumReleaseAge": "1 day"
    },
    "pip_requirements": {
      "fileMatch": ["requirements.*\\.in"]
    },
    "docker": {
      "digest": {
        "enabled": false
      }
    },
    "major": {
      "dependencyDashboardApproval": true
    },
    "packageRules": [
      {
        "matchDatasources": ["docker"],
        "groupName": ["Docker base images"]
      },
      {
        "matchDepTypes": ["devDependencies"],
        "matchUpdateTypes": ["patch", "minor"],
        "groupName": ["DevDependencies (non-major)"],
        "automerge": true
      },
      {
        "extends": ["packages:test"],
        "matchUpdateTypes": ["patch", "minor"],
        "matchCurrentVersion": "!/^0/",
        "groupName": "Test packages (non-major)",
        "automerge": true
      },
      {
        "extends": ["packages:test"],
        "matchUpdateTypes": ["major"],
        "groupName": "Test packages"
      },
      {
        "matchPackagePatterns": [
          "^@backstage/",
          "^@backstage-community/",
          "^@janus-idp/",
          "^@immobiliarelabs/",
          "^@roadiehq/",
          "^@pagerduty/",
          "^@internal/"
        ],
        "groupName": ["Backstage packages"],
        "dependencyDashboardApproval": true,
        "enabled": false
      }
    ],
    "ignorePaths": ["**/dist-dynamic/**"],
    "ignoreDeps": ["@roadiehq/backstage-plugin-argo-cd"],
    "vulnerabilityAlerts": {
      "enabled": true,
      "addLabels": ["kind/security"]
    },
    "osvVulnerabilityAlerts": true
  }